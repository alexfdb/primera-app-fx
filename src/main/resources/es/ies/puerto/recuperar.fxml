<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="250.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.ies.puerto.controller.RecuperarController" stylesheets="@style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Recuperar" />
   <Separator prefWidth="200.0">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
   </Separator>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingresar Email" />
   <TextField fx:id="textFieldIngresarEmail" promptText="Ingresar Email" />
   <Text fx:id="textText" strokeType="OUTSIDE" strokeWidth="0.0" />
    <Button fx:id="buttonEnviar" alignment="TOP_CENTER" onAction="#buttonEnviarClick" text="Enviar" textAlignment="CENTER" />
   <Separator prefWidth="200.0">
      <VBox.margin>
         <Insets bottom="20.0" top="20.0" />
      </VBox.margin>
   </Separator>
   <Button fx:id="buttonInicio" mnemonicParsing="false" onAction="#buttonInicioClick" text="Inicio" />
</VBox>
